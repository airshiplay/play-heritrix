<job>
    <name>chsijob</name>
    <pages>
        <urlRegex>http://yz.chsi.com.cn/sch/</urlRegex>
        <datas>
            <type>list</type>
            <xpath>
                /html/body[@class='ch-sticky']/div[@class='main-wrapper']/div[@class='container']/div[@class='yxk-table']/table[@class='ch-table']/tbody/tr
            </xpath>
            <name>college</name>
            <items>
                <colName>collegeid</colName>
                <xpath>td[1]/a</xpath>
                <groovy>
                    def href =  element.getAttribute("href");
                    return href.substring(href.indexOf("schId-")+6,href.indexOf(".dhtml"));
                </groovy>
            </items>
            <items>
                <colName>collegename</colName>
                <xpath>td[1]/a</xpath>
                <key>true</key>
            </items>
            <items>
                <colName>collegeaddress</colName>
                <xpath>td[2]</xpath>
            </items>
        </datas>
    </pages>
    <pages>
        <urlRegex>http://yz.chsi.com.cn/sch/schoolInfo--schId-367890.dhtml</urlRegex>
        <datas>
            <type>object_list</type>
            <name>college_category</name>
            <items>
                <xpath>/html/body/div[2]/div[2]/div/h1/a</xpath>
                <colName>collegename</colName>
                <key>true</key>
            </items>
            <items>
                <type>select</type>
                <xpath>//*[@id="mldm"]</xpath>
                <colName>category</colName>
            </items>
        </datas>
        <datas>
            <type>object_list</type>
            <name>college_subject</name>
            <items>
                <xpath>/html/body/div[2]/div[2]/div/h1/a</xpath>
                <colName>collegename</colName>
                <key>true</key>
            </items>
            <items>
                <xpath>//*[@id='yjxkdm']</xpath>
                <type>select</type>
                <colName>subject</colName>
            </items>
        </datas>
    </pages>

</job>